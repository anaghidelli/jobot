<div class="chat-bot-container">
  <div class="container d-flex justify-content-center align-items-center" style="position: relative;">
    <%= image_tag 'default-robot.png', class: "jobot-robot-chat" %>
    <%= simple_form_for @guest_user do |f| %>

      <div id="bot-start" class='bot-div'>
        <div class="jobot-speech">
          <h5>Letâ€™s get started!</h5>
          <h5>What is your name?</h5>
        </div>
        <div class="jobot-speech-user">
          <%= f.input :name, as: :string, label: false,placeholder: "your name here...", input_html: { class: 'bot-input' } %>
        </div>
      </div>

      <div id="bot-name" class='bot-div' hidden>
        <div class="jobot-speech">
          <h5>Ok #{name}, what job titles are you looking for?</h5>
        </div>
        <div class="jobot-speech-user">
          <%= f.input :job_title, as: :string, label: false, placeholder: "job title here...", input_html: { class: 'bot-input' } %>
        </div>
      </div>

      <div id="bot-location" class='bot-div' hidden>
      <h5>Where do you want to work?</h5>
        <%= f.input :location, as: :string, input_html: { class: 'bot-input' } %>
      </div>

      <div id="" class='bot-div' hidden>
      <h5>Do you need a visa to work in #{location}?</h5>
      <%= f.input :visa_sponsor, as: :radio_buttons, input_html: { class: 'bot-input', checked: false } %>
      </div>

      <div class='bot-div' hidden>
      <h5>What programming languages do you know?</h5>
      <%= f.association :skills, as: :select, collection: Skill.all, input_html: { class: 'js-example-basic-multiple bot-input', multiple: true } %>
      </div>


      <div class='bot-div' hidden>
      <h5>What human languages do you speak?</h5>
      <%= f.association :languages, as: :select, collection: Language.all, input_html: { class: 'js-example-basic-multiple bot-input', multiple: true } %>
      </div>

      <div class='bot-div' hidden>

      <h5>What's your target total compensation (full year)?</h5>
      <!-- here I have to put the fields themselfs that are going to be linked to the slider -->
      <div id="compensation_slider"></div>
      <%= f.input :total_compensation, input_html: { id: "totalCompensation", class: 'bot-input' }  %>
      <p class="d-none" id="total_compensation_lower"></p>
      <p class="d-none" id="total_compensation_upper"></p>
      </div>

      <div class='bot-div' hidden>

      <h5>How many years of professional experience do you have?</h5>
      <!-- here I have to put the fields themselfs that are going to be linked to the slider -->
      <div id="experience_slider" class='bot-div'></div>
      <%= f.input :years_experience, input_html: { id: "yearsExperience", class: 'bot-input' }  %>
      </div>

      <div class='bot-div' hidden>

      <h5>Which industries are you interested in?</h5>
      <%= f.association :industries, as: :select, collection: Industry.all, input_html: { class: 'js-example-basic-multiple bot-input', multiple: true } %>

      </div>

      <div class='bot-div' hidden>

      <h5>What's you education level?</h5>
      <%= f.input :education_degree, as: :select, collection: @education_degrees, input_html: { class: 'js-example-basic-multiple bot-input', multiple: true, } %>
      </div>

      <div class='bot-div' hidden>

      <h5>What type of employment are you looking for?</h5>
      <%= f.input :employment_type, as: :select, collection: Job.all.map(&:employment_type).uniq.reject(&:blank?), input_html: { class: 'js-example-basic-multiple bot-input', multiple: true } %>
      </div>

      <div class='bot-div' hidden>

      <h5>Are you interested in jobs posted over 30 days ago?</h5>
      <%= f.input :date_posted, as: :radio_buttons, input_html: { class: 'bot-input' } %>
      <%= f.submit "Finish" %>
      </div>

    <% end %>
    <%#= image_tag 'default-robot.png' %>

  </div>
</div>
