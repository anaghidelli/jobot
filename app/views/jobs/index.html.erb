<div class="header-text">
  <h2> JoBot found these <strong><%= @jobs.count %></strong> jobs for you!</h2>
</div>


<div class="card-holder">

    <% @jobs.each do |job| %>
      <div class="cards">
        <%= cl_image_tag job.company.logo, class: 'm-2' %>
          <div class="card-info">
            <h3><%= job.job_title.truncate(25) %></h3>
            <h5><%# job.location.truncate(30) %></h5>
            <h5><%= job.date_posted %></h5>
            <p><%# job.total_compensation.truncate(35) %></p>
            <p><%= job.description.truncate(40) %></p>
          </div>
          <div class="overlay">
            <%= link_to 'View', job_path(job) %>
          </div>
      </div>

    <% end %>
  </div>



  <div class="down-arrow-click">
    <a href="#"><i class="fa fa-angle-down"></i></a>
  </div>

<!-- container end div -->
</div>
